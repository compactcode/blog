<article>
  <header>
    <h2><a href="<%= article.path %>"><%= article.title %></a></h2>
  </header>
  <aside>
    <ul>
      <li><%= article.date %></li>
    </ul>
  </aside>
  <div>
    <%= body %>
  </div>
  <section>
    <header>
      <h3>Comments</h3>
    </header>
    <div id="disqus_thread" class="noaside"></div>
  </section>
</article>

<script type="text/javascript" src="http://disqus.com/forums/<%= @config[:disqus] %>/embed.js"> </script>
