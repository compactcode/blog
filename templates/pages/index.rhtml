<% for article in articles[0...3] %>
  <article>
    <header class="prefix_2 grid_10">
      <h2><a href="<%= article.path %>"><%= article.title %></a></h2>
    </header>
    <div class="clear"></div>
    <aside class="grid_2">
      <ul>
        <li><%= article.date %></li>
      </ul>
    </aside>
    <div class="grid_10">
      <%= article.summary %>
    </div>
    <div class="clear"></div>
  </article>
<% end %>

