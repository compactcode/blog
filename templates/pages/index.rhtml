<% for article in articles[0...3] %>
  <article>
    <header>
      <h2><a href="<%= article.path %>"><%= article.title %></a></h2>
    </header>
    <aside>
      <ul>
        <li><p><%= article.date %></p></li>
      </ul>
    </aside>
    <div>
      <%= article.summary %>
    </div>
  </article>
<% end %>

