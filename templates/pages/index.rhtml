<% for article in articles[0...3] %>
  <article>
    <header class="prefix_2 grid_10">
      <h3><a href="<%= article.path %>"><%= article.title %></a></h3>
    </header>
    <div class="clear"></div>
    <footer class="grid_2">
      <ul>
        <li><%= article.date %></li>
      </ul>
    </footer>
    <div class="grid_10">
      <%= article.summary %>
    </div>
    <div class="clear"></div>
  </article>
<% end %>

